@model IEnumerable<NewsArticles.Models.Article>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-3 bg-light">
    <div class="row row-cols-1 row-cols-md-3 g-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card">
                    <div class="bd-placeholder-img card-img-top" >
                        <object data="@Html.DisplayFor(modelItem => item.ImageURL)" type="image/png">
                            <svg width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="#55595c"></rect>
                                <text x="50%" y="50%" fill="#eceeef" dy=".3em" dx="-3.5em">Article Thumbnail</text>
                            </svg>
                        </object>
                    </div>
                    <div class="card-body">
                        <medium>@Html.DisplayFor(modelItem => item.ReadTime) minute read</medium>
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="#" class="text-uppercase text-decoration-none link-dark fw-bold">
                                <span>
                                    <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd">
                                        <path stroke="cornflowerblue" stroke-width="2" d="M21.883 12l-7.527 6.235.644.765 9-7.521-9-7.479-.645.764 7.529 6.236h-21.884v1h21.883z"/>
                                    </svg>
                                </span>
                                <span>&nbsp;Read Our Insights</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>